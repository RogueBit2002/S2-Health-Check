@using HetBetereGroepje.HealthCheck.Domain
@model (HomeViewModel model, IEnumerable<ITemplate> templates)

<link rel="stylesheet" href="~/css/DashBoard.css" asp-append-version="true" />

<div>



    <h1>Welcome!</h1>


    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title></title>
    </head>
    <button class="button" data-target="#loginmodal" data-toggle="modal">Create a new healthcheck</button>
    <div class="container">
        <div class="row">
            <div class="col col-sm-12">
                <div class="modal modalbackground" data-keyboard="false" data-backdrop="static" id="loginmodal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header modalnavbar">
                                <h4 class="modal-title">CREATE HEALTHCHECK</h4>
                                <button class="close closebutton" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body modalcss">
                                <form>
                                    <div class="form-group">
                                        <label for="inputUserName">User Name</label>
                                        <input type="text" class="form-control" placeholder="User Name" id="inputUserName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword">Password</label>
                                        <input type="password" class="form-control" placeholder="Password" id="inputPassword" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer modalfooter">
                                <button class="btn btn-primary">CREATE</button>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>

    <br />
    <br />
    <table class="table tabletest">
        <thead>
            <tr class="yellowtop">
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Results</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (IHealthCheck healthCheck in @Model.model.healthChecks)
            {
                <tr class="tableinsides">
                    <th scope="row">1</th>
                    <th> <a href="@AppConstants.Paths.HealthCheck/@healthCheck.Hash">@healthCheck.Name</a></th>
                    <th class="resultboard"><a class="textblock" href="@AppConstants.Paths.HealthCheck/@healthCheck.Hash">📈</a></th>
                    <th> Filled in: 10/100</th>
                </tr>
            }
        </tbody>
    </table>
</div>



