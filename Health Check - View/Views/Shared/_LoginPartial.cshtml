@using System.Security.Principal

<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <span class="navbar-text text-dark" style="font-size: 20px; ">Hello @User.Identity?.Name!</span>
        <li class="nav-item">
            <a class="nav-link text-dark" style="font-size: 20px; border: 2px solid black; border-radius: 10px; margin-left: 20px;" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" style="font-size: 20px" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    }
</ul>